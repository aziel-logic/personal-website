    </div>
    <script>
      (function () {
        var btn = document.getElementById('logout-btn');
        if (!btn) return;
        // hapus onclick inline jika ada supaya handler berikut yang dipakai
        btn.removeAttribute('onclick');

        btn.addEventListener('click', function (e) {
          e.preventDefault();
          // bersihkan session/token yang relevan
          try { localStorage.removeItem('authToken'); } catch (err) {}
          try { sessionStorage.removeItem('authToken'); } catch (err) {}
          // optional: hapus semua data terkait auth
          // localStorage.clear();

          // arahkan ke halaman login
          location.href = 'login.html';
        });
      })();
    </script>
